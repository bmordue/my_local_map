<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over"
     background-color="#f8f8f8">

  <Style name="poi">
    <Rule>
      <Filter>contains([other_tags], 'amenity')</Filter>
      <PointSymbolizer file="/app/icons/restaurant-15.svg" allow-overlap="true" ignore-placement="true"/>
    </Rule>
  </Style>

  <Layer name="poi" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>poi</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/app/data/osm_data/points.shp</Parameter>
    </Datasource>
  </Layer>

</Map>
