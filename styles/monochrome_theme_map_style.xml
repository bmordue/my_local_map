<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over" 
     background-color="#fafafa">

  <!-- LAND USE / BACKGROUND - Monochrome Theme -->
  <Style name="landuse">
    <Rule>
      <Filter>[landuse] = 'forest' or [natural] = 'wood'</Filter>
      <PolygonSymbolizer fill="#e5e5e5" fill-opacity="0.8"/>
    </Rule>
    <Rule>
      <Filter>[landuse] = 'farmland' or [landuse] = 'grass'</Filter>
      <PolygonSymbolizer fill="#f5f5f5" fill-opacity="0.6"/>
    </Rule>
    <Rule>
      <Filter>[leisure] = 'park' or [leisure] = 'garden'</Filter>
      <PolygonSymbolizer fill="#d4d4d4" fill-opacity="0.8"/>
    </Rule>
  </Style>

  <!-- WATER -->
  <Style name="water">
    <Rule>
      <Filter>[natural] = 'water'</Filter>
      <PolygonSymbolizer fill="#a3a3a3" fill-opacity="0.8"/>
    </Rule>
  </Style>

  <!-- WATERWAYS -->
  <Style name="waterways">
    <Rule>
      <Filter>[waterway] = 'river'</Filter>
      <LineSymbolizer stroke="#737373" stroke-width="4" stroke-opacity="0.9"/>
    </Rule>
    <Rule>
      <Filter>[waterway] = 'stream'</Filter>
      <LineSymbolizer stroke="#737373" stroke-width="2" stroke-opacity="0.8"/>
    </Rule>
    <Rule>
      <Filter>[waterway] = 'canal' or [waterway] = 'drain'</Filter>
      <LineSymbolizer stroke="#525252" stroke-width="3" stroke-opacity="0.8"/>
    </Rule>
  </Style>
  
  <!-- ROADS - Monochrome Theme with thick lines -->
  <Style name="roads_major">
    <Rule>
      <Filter>[highway] = 'motorway'</Filter>
      <LineSymbolizer stroke="#171717" stroke-width="8" stroke-opacity="0.9"/>
    </Rule>
    <Rule>
      <Filter>[highway] = 'trunk' or [highway] = 'primary'</Filter>
      <LineSymbolizer stroke="#262626" stroke-width="6" stroke-opacity="0.9"/>
    </Rule>
    <Rule>
      <Filter>[highway] = 'secondary'</Filter>
      <LineSymbolizer stroke="#404040" stroke-width="5" stroke-opacity="0.8"/>
    </Rule>
  </Style>

  <Style name="roads_minor">
    <Rule>
      <Filter>[highway] = 'tertiary' or [highway] = 'residential'</Filter>
      <LineSymbolizer stroke="#525252" stroke-width="4" stroke-opacity="0.7"/>
    </Rule>
    <Rule>
      <Filter>[highway] = 'service' or [highway] = 'track'</Filter>
      <LineSymbolizer stroke="#737373" stroke-width="3" stroke-opacity="0.6"/>
    </Rule>
  </Style>

  <Style name="paths">
    <Rule>
      <Filter>[highway] = 'footway' or [highway] = 'path'</Filter>
      <LineSymbolizer stroke="#525252" stroke-width="2" stroke-dasharray="6,4" stroke-opacity="0.8"/>
    </Rule>
    <Rule>
      <Filter>[highway] = 'cycleway'</Filter>
      <LineSymbolizer stroke="#404040" stroke-width="3" stroke-dasharray="8,4" stroke-opacity="0.9"/>
    </Rule>
  </Style>
  
  <!-- BUILDINGS -->
  <Style name="buildings">
    <Rule>
      <PolygonSymbolizer fill="#e5e5e5" fill-opacity="0.9"/>
      <LineSymbolizer stroke="#262626" stroke-width="1.5" stroke-opacity="0.8"/>
    </Rule>
  </Style>
  
  <!-- POINTS OF INTEREST -->
  <Style name="poi">
    <Rule>
      <MarkersSymbolizer fill="#171717" width="12" height="12" opacity="0.9"/>
    </Rule>
  </Style>

  <!-- LAYER DEFINITIONS -->
  <Layer name="landuse" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>landuse</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/multipolygons.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="water" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>water</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/multipolygons.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="waterways" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>waterways</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/lines.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="buildings" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>buildings</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/multipolygons.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="roads_major" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>roads_major</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/lines.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="roads_minor" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>roads_minor</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/lines.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="paths" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>paths</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/lines.shp</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="poi" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>poi</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/home/runner/work/my_local_map/my_local_map/data/osm_data/points.shp</Parameter>
    </Datasource>
  </Layer>

</Map>